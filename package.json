{
  "name": "plate",
  "version": "0.0.0",
  "description": "Old boilerplate for web-pages!",
  "main": "build/index.html",
  "license": "MIT",
  "private": true,
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "now-build": "npm run dist",
    "now-dev": "npm run dev",
    "dev": "tarima watch -d",
    "dist": "tarima -mqe $NODE_ENV",
    "check": "eslint 'src/**/*.{js,pug}'",
    "predist": "npm run check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tacoss/plate.git",
    "issues": "https://github.com/tacoss/plate/issues"
  },
  "tarima": {
    "from": "src",
    "public": "build",
    "copy": {
      "public": "."
    },
    "filter": [
      "!**/{lib,shared,components}/**"
    ],
    "bundle": [
      "**/{main,index}.js"
    ],
    "rename": [
      "**/pages/**/!(index).html:{basedir}/{name}/index.html",
      "**/{pages,resources}/**:{fullpath/1}",
      "**/index.(css|js):{basedir}.{ext}",
      "**/app/**:{fullpath/1}",
      "**:{fullpath/1}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "plugins": [
      "talavera"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less",
        "gql": "json"
      },
      "rollup": {
        "context": "window",
        "plugins": {
          "rollup-plugin-node-resolve": {
            "mainFields": [
              "module",
              "main"
            ]
          },
          "rollup-plugin-commonjs": {
            "extensions": [
              ".js",
              ".svelte"
            ]
          }
        },
        "globals": {
          "node-fetch": "fetch"
        }
      },
      "kramed": {
        "highlight": true
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.6",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-pug": "^1.1.1",
    "fetchql": "^3.0.0",
    "highlight.js": "^9.15.6",
    "kramed": "^0.5.6",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.0-beta11",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "svelte": "^3.3.0",
    "svero": "^0.5.0",
    "talavera": "^0.7.4",
    "tarima": "^4.4.7",
    "tarima-lr": "^0.5.0",
    "terser": "^3.17.0"
  }
}

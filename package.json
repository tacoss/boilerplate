{
  "name": "your-website",
  "version": "0.0.0",
  "description": "Useful for websites!",
  "main": "dist/main.js",
  "license": "MIT",
  "private": true,
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "dev": "tarima watch -d",
    "dist": "tarima -qe $NODE_ENV",
    "check": "eslint 'src/**/*.{js,pug}'"
  },
  "tarima": {
    "from": "src",
    "public": "build",
    "copy": {
      "public": "."
    },
    "filter": [
      "!**/{lib,layouts,partials}/**"
    ],
    "bundle": [
      "**/main.js"
    ],
    "rename": [
      "**/!(index).html:{basedir}/{name}/index.html",
      "**/[[:digit:]]/index.html:{basedir}.{ext}",
      "**/{assets,pages}/**:{fullpath/2}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "plugins": [
      "talavera"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.6",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-pug": "^1.1.1",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.0-beta11",
    "rollup": "^1.1.2",
    "talavera": "^0.7.1",
    "tarima": "^4.4.3",
    "tarima-lr": "^0.4.1"
  }
}

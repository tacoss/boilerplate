{
  "name": "static-boilerplate",
  "description": "Static boilerplate",
  "main": "dist/main.js",
  "version": "0.0.0",
  "scripts": {
    "dev": "tarima watch -d",
    "dist": "tarima -fqe production"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/components/**"
    ],
    "bundle": "**/main.js",
    "output": "public",
    "rename": [
      "**/assets/**:{fullpath/2}",
      "**/pages/**:{fullpath/3}"
    ],
    "pluginOptions": {
      "bower": {
        "bundle": true
      }
    },
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "tarima-bower"
    ]
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "node-sass": "^4.9.3",
    "pug": "^2.0.0-beta6",
    "rollup": "^0.65.2",
    "tarima": "^4.2.0",
    "tarima-bower": "^0.4.3",
    "tarima-lr": "^0.4.1",
    "vue-template-compiler": "^2.5.17"
  }
}
